#include "main.h"
#include <string.h>
/**
 * _str_len_recursion - prints/returns the length of the string
 * @s: string to be counted
 * Description: returns the strig length
 * Return: int/length
 */
int _strlen_recursion(char *s)
{
	if (*s == '\o')
	{
		return (0);
	}
	else
	{
		return (1 + strlen(s + 1));
	}
}
